{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Launch Program",
        "program": "${workspaceFolder}/app.js",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node"
    },
    {
      // ‚èµ Arranca y depura al mismo tiempo
      "type": "node",
      "request": "launch",
      "name": "Dev (API)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],      // ‚Üê script que definimos arriba                   // debe coincidir con --inspect
      "skipFiles": [
        "<node_internals>/**"
      ],
      // Para TypeScript conviene mapear sourcemaps
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },

    {
      // üîó Conecta a un proceso Node ya levantado a mano
      "type": "node",
      "request": "attach",
      "name": "Attach (API)",
      "port": 9229,
      "restart": false
    }
  ]
}
